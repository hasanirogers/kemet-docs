  "description": "The documentation app for Kemet UI.",
  "main": "index.js",
  "keywords": [],
  "author": "Hasani Rogers <hasani.rogers@gmail.com>",
  "devDependencies": {
    "@open-wc/eslint-config": "4.2.0",
    "@open-wc/prettier-config": "1.1.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@webcomponents/webcomponentsjs": "2.5.0",
    "eslint": "7.21.0",
    "rollup": "^2.50.4",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-scss": "^2.6.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.34.0"
  },
  "dependencies": {
    "algoliasearch": "^4.9.1",
    "highlight.js": "^11.1.0",
    "kemet-ui": "0.0.5",
    "lit": "^2.0.0-rc.2",
    "ts-dedent": "^2.0.0",
    "dotenv": "^10.0.0",
    "ssh2-sftp-client": "^6.0.1"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": "@open-wc/prettier-config",
  "scripts": {
    "deploy": "node deploy.js",
    "start": "rollup -c && bundle exec jekyll serve",
    "watch": "rollup -c --watch",
    "build": "rollup -c && bundle exec jekyll build",
    "build:site": "bundle exec jekyll build",
    "build:assets": "rollup -c",
    "lint:eslint": "eslint src/** --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"src/**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"src/**/*.js\" --write --ignore-path .gitignore"
  }
}
